@using Microsoft.AspNetCore.Identity
@using wsPLD_8.Models.Shared
@inject SignInManager<Usuarios> SignInManager
@inject UserManager<Usuarios> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item user-menu">
            <a class="nav-link dropdown-toggle">
                <img src="~/dist/assets/img/user2-160x160.jpg"
                     class="user-image rounded-circle shadow"
                     alt="User Image" />
                <span class="d-none d-md-inline"><b>@User.Identity?.Name</b></span>
        </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
